<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="ca.uhn.fhir.rest.client" level="INFO"/>
    <logger name="ca.uhn.fhir.validation.svc.RemoteTerminologyServiceValidationSupport" level="DEBUG"/>
    <logger name="ca.uhn.fhir.context.support" level="INFO"/>

</configuration>